<head>
	<title>EcoBit</title>
	<script src="http://code.jquery.com/jquery-2.1.3.js"></script>
</head>

<div id="home_header" class="box_header">
		<div id="sidebar_toggle"></div>
		<h4 style="margin-left:35px">
			<%= link_to 'EcoBit', root_path %>
		</h4>
		
		<div id="header_search">
			<h4>Search:</h4>
			<%= form_for @search_company, :url => {:controller => "home", :action => :search } do |f| %>
				<% f.text_field :name %><input/>
				<% f.submit %><button>Go</button>
			<% end %>
		</div>
	</div>
		
	
	<div id="sidebar">
		<div id="sidebar_contents">
			<div id="closeSidebar">Close</div><br>
			<div style="display:inline-blocl">
				<%= link_to 'Sign In', '/signin/index' %> |
				<%= link_to 'Sign Up', new_company_path %>
			</div>
			<p><%= "Signed in as: #{session[:user_id]}" %></p>
		</div>
	</div>